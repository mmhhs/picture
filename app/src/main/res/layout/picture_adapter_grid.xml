<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/picture_adapter_grid_layout"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/picture_adapter_grid_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/picture_adapter_grid_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/picture_transparent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/picture_adapter_grid_checkBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/picture_check" />
        <TextView
            android:id="@+id/picture_adapter_grid_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/picture_sp"
            android:drawablePadding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:gravity="center_vertical"
            android:textColor="@color/picture_white"
            android:textSize="14sp"
            android:text="0:12"/>
    </RelativeLayout>
</LinearLayout>
